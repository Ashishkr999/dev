            <!-- Product Image -->
            <div class="product-image">
                <img src="/images/products/NCERT.jpg" alt="NCERT Class 10 Science" class="product-img">
            </div>

            <!-- Product Details -->
            <div class="product-details">
                <h1 class="product-title">NCERT Class 10 Science</h1>

                <div class="product-rating">
